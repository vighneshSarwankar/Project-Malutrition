<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#000000" tools:context=".Camera"
    android:orientation="vertical">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:scaleType="fitCenter"
        android:id="@+id/image_view1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:text="CALIBRATE DEVICE"
        android:id="@+id/btn_calibrate"
        android:onClick="onCalibrate"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/btn_start_camera"
        android:layout_marginLeft="20dp"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:text="Start Camera"
        android:layout_gravity="bottom"
        android:layout_below="@+id/image_view1"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:enabled="false"
        android:onClick="onSave"
        android:text="Save"
        android:id="@+id/btn_cam_save"
        android:layout_gravity="bottom"
        android:layout_below="@+id/image_view1"
        android:layout_toEndOf="@+id/btn_start_camera"
        android:layout_marginStart="34dp" />

</RelativeLayout>
